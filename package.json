{
  "name": "@dimerapp/cli",
  "version": "1.0.14",
  "author": "virk",
  "bin": {
    "dimer": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/dimerapp/cli/issues"
  },
  "dependencies": {
    "@dimerapp/assets-middleware": "^1.0.0",
    "@dimerapp/cli-utils": "^1.0.3",
    "@dimerapp/config-parser": "^2.0.4",
    "@dimerapp/context": "^2.0.0",
    "@dimerapp/datastore": "^3.0.3",
    "@dimerapp/dfile": "^1.1.5",
    "@dimerapp/fs-client": "^2.0.1",
    "@dimerapp/http-server": "^2.0.3",
    "@dimerapp/image": "^1.0.3",
    "@oclif/command": "^1.5.11",
    "@oclif/config": "^1.12.9",
    "@oclif/plugin-help": "^2.1.6",
    "pretty-bytes": "^5.1.0",
    "tslib": "^1.9.3",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@adonisjs/mrm-preset": "^1.0.16",
    "@oclif/dev-cli": "^1.21.2",
    "@oclif/tslint": "^3.1.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.10.4",
    "chai": "^4.2.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "globby": "^9.1.0",
    "intercept-stdout": "^0.1.2",
    "japa": "^2.0.7",
    "mrm": "^1.2.1",
    "pkg-ok": "^2.3.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/dimerapp/cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "dimer",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "macos": {
      "identifier": "com.dimerapp.cli"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimerapp/cli.git"
  },
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc && oclif-dev manifest && oclif-dev readme",
    "prepare": "rm -rf lib && tsc",
    "pack": "oclif-dev pack",
    "test": "node japaFile.js",
    "version": "oclif-dev readme && git add README.md",
    "commit": "git-cz"
  },
  "types": "lib/index.d.ts",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "description": "Simplest way to publish docs",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "gitHooks": {
    "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
  }
}
